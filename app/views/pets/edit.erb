<h1>Update Pet</h1>
<h1>Create a new Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">  
<label for="name"><input type="text" name="pet[name]" id="pet_name"></label>
    <%@owners.each do |owner|%>
        <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name %>>
        <%=owner.name%>
    <%end%>
    <hr>
    <label for="owner_name">New Owner Name:</label>
    <input type="text" name="owner[name]" id="owner_name">
    <input type="submit" id="submit" value="Update Pet>

</form>

