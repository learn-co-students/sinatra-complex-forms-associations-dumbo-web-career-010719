<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">  
  <label>Name:</label>
 
  <br>
 
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
 
  <br>
 
  <label>Choose an existing owner:</label>
  <input type="checkbox" name="owner[name]" id="<%=@owner.id%>" value="<%=@owner.id%>" checked ><%=@owner.name%></input>
  <br>

  <label>Other owners</label>
  <%@owners.each do |owner|%>
    <input type="radio" name="owner[id]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  
  <br>
  <label>New Owner name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br>

  <input type="submit" value="Update Pet">
</form>
 

 