<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div>
       <p>Pet Name: <input type="text" name="pet[name]" id ="pet_name" value = <%= @pet.name %>></p>
        <label>Choose an existing pet:</label>
 
        <br>
        
        <%@owners.each do |owner|%>
            <input type="radio" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner==owner %>><%=owner.name%></input>
        <%end%>
        
        <br>

        <label>and/or, create a new owner:</label>
        <br>
        <p><label>name:</label>
            <input type="text" name="owner[name]" id="owner_name"></input></p>
        <br>

       <input type="submit" value="Update Pet">
    </div>
</form>

