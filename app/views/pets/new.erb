<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
<label for="name"><input type="text" name="pet[name]" id="pet_name"></label>
    <%@owners.each do |owner|%>
        <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>">
        <%=owner.name%>
    <%end%>
    <hr>
    <label for="new_owner">New Owner Name:</label>
    <input type="text" name="owner_name">
    <input type="submit" id="submit" value="Create Pet">

</form>

